{% extends 'dina_base.html.twig' %}

{% block title %}Widgets{% endblock %}

{% block body %}
<section class="dina-section">
    <div class="container">
        <h1 class="section-title">Financial Widgets</h1>

        <p class="section-text">
            Display real-time stock prices, market charts and financial insights
            directly inside your website.
        </p>

        <div class="cards">
            <div class="card">
                <h3>Stock Charts</h3>
                <p>Interactive real-time charts with multiple timeframes.</p>
            </div>

            <div class="card">
                <h3>Market Overview</h3>
                <p>Track indices, commodities and crypto markets instantly.</p>
            </div>

            <div class="card">
                <h3>Company Profiles</h3>
                <p>Detailed information about listed companies.</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}
