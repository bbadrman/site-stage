{% extends 'dina_base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="dina-page">
  <div class="login-box">
    <h3>Create Account</h3>

    {{ form_start(registrationForm, {'attr': {'class': 'auth-form'}}) }}

      <div class="field">
        {{ form_widget(registrationForm.username, {'attr': {'class': 'input', 'placeholder': 'Username (optional)'}}) }}
        {{ form_errors(registrationForm.username) }}
      </div>

      <div class="field">
        {{ form_widget(registrationForm.email, {'attr': {'class': 'input', 'placeholder': 'Email'}}) }}
        {{ form_errors(registrationForm.email) }}
      </div>

      <div class="remember-row">
        <label class="remember">
          {{ form_widget(registrationForm.agreeTerms) }}
          I agree to the terms
        </label>
        {{ form_errors(registrationForm.agreeTerms) }}
      </div>

      <div class="field">
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input', 'placeholder': 'Password'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
      </div>

      <button class="btn primary" type="submit">Register</button>

      <p class="auth-link">
        Already have an account?
        <a href="{{ path('app_login') }}">Login</a>
      </p>

    {{ form_end(registrationForm) }}
  </div>
</div>
{% endblock %}
