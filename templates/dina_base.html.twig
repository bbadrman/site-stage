<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Dina{% endblock %}</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="{{ asset('css/dina.css') }}">
</head>

<body class="dina-layout">

  {% set current = app.request.attributes.get('_route') %}

  <header class="dina-nav">
    <a class="dina-brand" href="{{ path('app_dina') }}">aksam assurance</a>

    <nav class="dina-links">
      <a href="{{ path('app_about') }}" class="{{ current == 'app_about' ? 'active' : '' }}">About</a>
      <a href="{{ path('app_widgets') }}" class="{{ current == 'app_widgets' ? 'active' : '' }}">Widgets</a>
      <a href="{{ path('app_solutions') }}" class="{{ current == 'app_solutions' ? 'active' : '' }}">Solutions</a>
      <a href="{{ path('app_pricing') }}" class="{{ current == 'app_pricing' ? 'active' : '' }}">Pricing</a>
      <a href="{{ path('app_contact') }}" class="{{ current == 'app_contact' ? 'active' : '' }}">Contact</a>

      {% if app.user %}
        <a class="dina-signin" href="{{ path('app_logout') }}">Logout</a>
      {% else %}
        <a class="dina-signin" href="{{ path('app_login') }}">Sign In</a>
      {% endif %}
    </nav>
  </header>

  <main class="dina-main">
    {% block body %}{% endblock %}
  </main>

</body>
</html>
