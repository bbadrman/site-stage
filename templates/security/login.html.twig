{% extends 'dina_base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/dina.css') }}">
{% endblock %}

{% block body %}
<div class="dina-page">
  <div class="hero-container">

    <div class="hero-left">
      <h1 class="hero-title">Advanced analytics built for precision trading.</h1>
      <p class="hero-subtitle">Transforming complex market data into decisive action.</p>
    </div>

    <div class="login-box">
      <h3>Please sign in</h3>

      {% if error %}
        <div class="form-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      <form method="post" class="auth-form">
        <div class="field">
          <input
            type="text"
            value="{{ last_username }}"
            name="_username"
            id="inputUsername"
            class="input"
            autocomplete="username"
            placeholder="Email or username"
            required
            autofocus
          >
        </div>

        <div class="field">
          <input
            type="password"
            name="_password"
            id="inputPassword"
            class="input"
            autocomplete="current-password"
            placeholder="Password"
            required
          >
        </div>

        <div class="remember-row">
          <label class="remember">
            <input type="checkbox" name="_remember_me"> Remember me
          </label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn primary" type="submit">Sign in</button>

        <p class="auth-link">
          Don't have an account?
          <a href="{{ path('app_register') }}">Register</a>
        </p>
      </form>
    </div>

  </div>
</div>
{% endblock %}
